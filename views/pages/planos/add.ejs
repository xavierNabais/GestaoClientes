<!DOCTYPE html>
<html lang="pt">
 <head>
  <meta charset="utf-8">
  <title>Projeto prático</title>
  </head>
  <body>

    <%- include('../../partials/header');-%>
    
  </body>

<main>
  <%- include('../../partials/menu');-%>

  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
          <a href="javascript:history.back()" class="border-shadow">
            <span class="text-gradient"><i class="fas fa-long-arrow-alt-left"></i> Voltar </i></span>
        </a>
        </div>

        <form action="/planos/create/dentroplano/<%= plano_id %>_<%= user_id %>" method="POST" name="uploadForm" id="uploadForm">
            <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">Exercício</th>
                    <th scope="col">Equipamento</th>
                    <th scope="col">Repetições</th>
                    <th scope="col">Carga</th>
                    <th scope="col">Intervalo</th>
                    <th scope="col">Ações</th>
                  </tr>
                </thead>
                <tbody>
    
                  <tr>
                    <td>
                      <select name="exercicio" id="exercicio" form="uploadForm">
                      <option value="Escolha um equipamento" readonly selected>Escolha um exercício:</option>
                      <% exercicios.forEach((exercicios) => { %>
                      <option value="<%= exercicios.id_exercicio %>_<%= exercicios.nome %>"><%= exercicios.id_exercicio %>_<%= exercicios.nome %></option>
                      <% }); %>
                    </td>
                    <td>
                      <select name="equipamento" id="equipamento" form="uploadForm">
                      <option value="Escolha um equipamento" readonly selected>Escolha um equipamento:</option>
                      <% equipamentos.forEach((equipamentos) => { %>
                      <option value="<%= equipamentos.id_equipamento %>_<%= equipamentos.nome %>"><%= equipamentos.id_equipamento %>_<%= equipamentos.nome %></option>
                      <% }); %>
                    </td>
                    <td><input type="text" name="repeticoes" ></td>
                    <td><input type="text" name="carga" ></td>
                    <td><input type="text" name="intervalo" ></td>
                    <td style="text-align: center;"><input type="submit" value="Criar"></td>
                  </tr>
                </tbody>
      
      
            </table>
        </form>
    </div>
</main>
<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>

</body>

</html>