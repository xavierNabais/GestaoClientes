                </tr>
              </thead>
              <tbody>
      
                  <tr>
                    <th scope="row"><input type="text" name="numero" value="<%= dados[0].utilizador_id %>" readonly></th>
                    <td><input type="text" name="nome" value='<%= dados[0].nome %>' ></td>
                    <td><input type="text" name="username" value='<%= dados[0].username %>' ></td>
                    <td><input type="text" name="password" value='<%= dados[0].password %>' ></td>
                    <td><input type="text" name="cargo" value='<%= dados[0].cargo %>' ></td>
                    <td><input type="text" name="morada" value='<%= dados[0].morada %>' ></td>
                    <td><input type="text" name="contato" value='<%= dados[0].contato %>' ></td>
                    <td style="text-align: center;"><input type="submit" value="Submeter"></td>
                  </tr>
              </tbody>
            </table>
          </form>
      </div>
  </main>

 






<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>

