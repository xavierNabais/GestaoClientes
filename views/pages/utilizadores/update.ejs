<!DOCTYPE html>
<html lang="pt">
 <head>
  <meta charset="utf-8">
  <title>Ficha 3</title>
  </head>
  <body>

    <%- include('../../partials/header');-%>
    
  </body>



        <%- include('../../partials/menu');-%>


        <main id="site-main">
          <div class="container">
              <div class="box-nav d-flex justify-between">
                  <a href="javascript:history.back()" class="border-shadow">
                      <span class="text-gradient"><i class="fas fa-long-arrow-alt-left"></i> Voltar </i></span>
                  </a>
              </div>

              <form action="/update" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nome</th>
                  <th scope="col">Username</th>
                  <th scope="col">Password</th>
                  <th scope="col">Cargo</th>
                  <th scope="col">Morada</th>
                  <th scope="col">Contacto</th>
