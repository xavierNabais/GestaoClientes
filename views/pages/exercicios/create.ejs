<!DOCTYPE html>
<html lang="pt">
 <head>
  <meta charset="utf-8">
  <title>Projeto prático</title>
  </head>
  <body>

    <%- include('../../partials/header');-%>
    
  </body>

  <main>
    <%- include('../../partials/menu');-%>
  
    <main id="site-main">
      <div class="container">
          <div class="box-nav d-flex justify-between">
              <a href="/exercicios/form" class="border-shadow">
                  <span class="text-gradient">Novo Registo <i class="fas fa-user"></i></span>
              </a>
          </div>
  
          <form action="/exercicios/create" method="POST" id="uploadForm">
              <table class="table">
                  <thead class="thead-dark">
                    <tr>
                      <th scope="col">Nome</th>
                      <th scope="col">Equipamento</th>
                      <th scope="col">Músculo</th>
                      <th scope="col" class="text-center">Ações</th>
                    </tr>
                  </thead>
                  <tbody>
      
                    <tr>
                      <th scope="row"><input type="text" name="nome" ></th>
                      <td>
                        <select name="equipamento" id="equipamento" form="uploadForm">
                        <option value="Escolha um cliente" disabled selected>Escolha um equipamento:</option>
                        <% dados.forEach((dados) => { %>
                        <option value="<%= dados.nome %>"><%= dados.nome %></option>
                        <% }); %>
                      </td>
                      <td><input type="text" name="musculo" ></td>
                      <td style="text-align: center;"><input type="submit" value="Criar"></td>
                      
                    </tr>
                    </tbody>
        
        
              </table>
          </form>
      </div>
  </main>

<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>

</body>

</html>